<script type="text/javascript" src = "http://maps.google.com/maps/api/js?sensor=false"></script>
<link href='http://fonts.googleapis.com/css?family=Muli' rel='stylesheet' type='text/css'>

<!-- - - - - - - - HEADER -->

    <header class="landing">
      <a href="about.html" class="floatR button_SignIn">Sign In</a>
      <h1>
        BAGGERS
      </h1>
      <p>"Contact with other backpackers, make plans and share your <br> experience during your trip around the world"</p>
      <button class="arrow_button">
        <a href="index.erb#exactPoint">
          <%= image_tag("arrow2.png") %>
        </a>
      </button>
    </header>

<!-- - - - - - - - NAV -->
    <nav id="exactPoint">
      <ul class="floatL Vertical-Align menu">
        <li><a href="index.erb">HOME</a></li>
        <li><a href="http://localhost:3000/map">MAP</a></li>
        <li><a href="contact.html">CONTACT</a></li>
      </ul>
      <section class="floatR Vertical-Align cf">
        <a href="outTwitter">
          <%= image_tag("twitter.png") %>
        </a>
        <a href="outFacebook">
          <%= image_tag("facebook.png") %>
        </a>)
      </section>
    </nav>

<!-- - - - - - - - SECTION 1 -->

    <article class="article_style">
      <section class="floatL cf Vertical-Align">
        <p class="text_aside">BACK-PACKERS YOU CAN
        MEET THROUGH BAGGERS</p>
        <button class="button_color">Sign Up</button>
        <button class="button_white">Read More</button>
      </section>
      <div id="map_canvas" class="map_style floatR"></div>
    </article>

<!-- - - - - - - - SECTION 2 -->
    <article class="article_style">

      <!-- input data -->
      <section class="contactPanel floatL cf Vertical-Align">

        <section class="inputContainer">
          <form action="/messages" method="POST">
            <input type="text" name="user_name" id="user_name" placeholder="Name" maxlength="30" class="input">
            <button action="/messages" id="button">Send!!</button>
            <input type="text" name="message" id="message" placeholder="Place your message" maxlength="240" class="input">
          </form>
        </section>

        <!-- messages -->
        <section class="contact">
          <%= image_tag("avatar1.jpg", class: "avatar floatL Vertical-Align cf") %>
          <div class="textContact floatR Vertical-Align cf">
            <h4>Sophie</h4>
            <!-- <h5>France</h5> -->
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Alias minus, tempora cum expedita cumque<p>
          </div>
        </section>

        <section class="contact">
          <%= image_tag("avatar2.jpg", class: "avatar floatL Vertical-Align cf") %>
          <div class="textContact floatR Vertical-Align cf">
            <h4>Vasilis</h4>
            <!-- <h5>Greece</h5> -->
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Impedit necessitatibus.<p>
          </div>
        </section>

        <section class="contact">
          <%= image_tag("avatar3.jpg", class: "avatar floatL Vertical-Align cf") %>
          <div class="textContact floatR Vertical-Align cf">
            <h4>Olga</h4>
            <!-- <h5>Perm</h5> -->
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Impedit necessitatibus.<p>
          </div>
        </section>

          <% @messages.each do |message| %>
            <section class="contact">
            <img src="avatar_guest.png" class="avatar floatL Vertical-Align cf">
              <div class="textContact floatR Vertical-Align cf">
                <h4><%= message.user.user_name %></h4>
                <p><%= message.text %><p>
                <%= button_to "delete", {
                    :controller => :messages, :action => 'destroy', :id => message.id
                },
                :method => :delete %>
              </div>
            </section>
          <%end%>
      </section>

      <section class="floatR cf Vertical-Align">
        <p class="text_aside2">TELL WHAT YOU WANNA DO TO <br> OTHERS <br> BACK-PACKERS</p>
        <button class="button_white floatR">Read More</button>
        <button class="button_color floatR">Sign Up</button>
      </section>

    </article>
    <footer>

    </footer>
